<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?w=1200);">
  <div class="container text-center">
    <h1 class="text-white fw-bold display-4">Save any kind of movies</h1>
    <h3 class="text-white fw-light mt-3 opacity-75">Classic, Horror, Romance...</h3>
  </div>
</div>

<div class="container py-5">

  <div class="d-flex align-items-center justify-content-between mb-4">
    <h3 class="mb-0 fw-bold">Mes Listes</h3>
    <%= link_to "Nouvelle liste", new_list_path, class: "btn btn-success rounded-pill px-4" %>
  </div>

  <div class="row g-4">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-lg-4">

        <%= link_to list_path(list), class: "text-decoration-none card-link" do %>

          <% if list.photo.attached? %>
            <div class="card-category shadow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= rails_blob_url list.photo.variant(resize_to_fill: [400, 250]), only_path: false %>')">
              <%= list.name %>
            </div>
          <% else %>
            <div class="card-category shadow" style="
              background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?w=1200');
              min-height: 200px;
              ">
              <%= list.name %>
            </div>
          <% end %>

        <% end %>

      </div>
    <% end %>
  </div>
</div>
