<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">

      <div class="bg-white p-4 rounded shadow-sm border">
        <h2 class="mb-4 text-center fw-bold">Créer une nouvelle liste</h2>

        <%= simple_form_for(@list) do |f| %>
          <%= f.input :name,
              label: "Nom de la liste",
              placeholder: "Ex: Classiques, Horreur, Comédies..." %>

          <%= f.input :photo,
              as: :file,
              label: "Image de couverture" %>

          <%= f.submit "Créer la liste", class: "btn btn-success w-100 rounded-pill mt-3" %>
        <% end %>

        <div class="text-center mt-3">
          <%= link_to "Annuler", lists_path, class: "text-secondary text-decoration-none small" %>
        </div>

      </div>

    </div>
  </div>
</div>
